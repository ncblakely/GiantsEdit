<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GiantsEdit.App.Dialogs.NewMapDialog"
        Title="New Map" Width="350" Height="280"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="16" Spacing="8">
        <TextBlock Text="Create a new map" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

        <TextBlock Text="Terrain Width:" />
        <NumericUpDown x:Name="NumWidth" Value="256" Minimum="16" Maximum="2048" Increment="16" />

        <TextBlock Text="Terrain Height:" />
        <NumericUpDown x:Name="NumHeight" Value="256" Minimum="16" Maximum="2048" Increment="16" />

        <TextBlock Text="Texture Name:" />
        <TextBox x:Name="TxtTexture" Text="" Watermark="e.g. ground.tga" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" />
            <Button x:Name="BtnOk" Content="Create" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
