<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GiantsEdit.App.Dialogs.EditorControlsDialog"
        Title="Editor Controls"
        Width="520" Height="560"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <ScrollViewer Margin="16">
        <StackPanel Spacing="12">
            <TextBlock x:Name="ControlsText"
                       TextWrapping="Wrap"
                       FontFamily="Consolas" FontSize="13"
                       xml:space="preserve" />

            <Separator/>
            <TextBlock FontWeight="Bold" FontSize="16" Text="Menu Shortcuts" />
            <TextBlock TextWrapping="Wrap" xml:space="preserve" FontFamily="Consolas" FontSize="13">Ctrl+N              New map
Ctrl+O              Open map
Ctrl+S              Save map
Ctrl+Shift+S        Save map as
Ctrl+W              Close map
F1                  Camera mode
F2                  Height editing mode
F3                  Light editing mode
F4                  Triangle editing mode
F5                  Object editing mode
F9                  Toggle view terrain mesh
F10                 Toggle "Draw real objects"
F11                 Toggle view objects through terrain</TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>
