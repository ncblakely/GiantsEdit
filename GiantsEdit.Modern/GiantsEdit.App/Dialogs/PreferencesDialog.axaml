<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GiantsEdit.App.Dialogs.PreferencesDialog"
        Title="Preferences" Width="500" Height="180"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock Text="Preferences" FontSize="14" FontWeight="Bold" />

        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
            <TextBlock Grid.Column="0" Text="Game path:" VerticalAlignment="Center" Margin="0,0,8,0" />
            <TextBox Grid.Column="1" x:Name="TxtGamePath" IsReadOnly="True" />
            <Button Grid.Column="2" x:Name="BtnBrowse" Content="Browse..." Margin="8,0,0,0" />
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" />
            <Button x:Name="BtnOk" Content="OK" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
