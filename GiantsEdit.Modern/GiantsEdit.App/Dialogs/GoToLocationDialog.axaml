<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GiantsEdit.App.Dialogs.GoToLocationDialog"
        Title="Go To Location" Width="300" Height="230"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="16" Spacing="8">
        <TextBlock Text="Move camera to coordinates" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>

        <TextBlock Text="X:" />
        <TextBox x:Name="TxtX" Text="0" />

        <TextBlock Text="Y:" />
        <TextBox x:Name="TxtY" Text="0" />

        <TextBlock Text="Z:" />
        <TextBox x:Name="TxtZ" Text="200" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" />
            <Button x:Name="BtnOk" Content="Go" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
