<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctrl="using:GiantsEdit.App.Controls"
        xmlns:vm="using:GiantsEdit.App.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="GiantsEdit.App.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="GiantsEdit" Width="1280" Height="720">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <!-- File -->
            <MenuItem Header="_File">
                <MenuItem Header="New map..." x:Name="MenuNewWorld" InputGesture="Ctrl+N" />
                <MenuItem Header="Open map..." x:Name="MenuOpenWorld" InputGesture="Ctrl+O" />
                <Separator/>
                <MenuItem Header="Save map" x:Name="MenuSaveWorld" InputGesture="Ctrl+S" />
                <MenuItem Header="Save map as..." x:Name="MenuSaveWorldAs" InputGesture="Ctrl+Shift+S" />
                <Separator/>
                <MenuItem Header="Close map" x:Name="MenuCloseMap" InputGesture="Ctrl+W" />
                <Separator/>
                <MenuItem Header="Clear terrain" x:Name="MenuClearTerrain" />
                <MenuItem Header="Clear objects" x:Name="MenuClearObjects" />
                <MenuItem Header="Import">
                    <MenuItem Header="Terrain (GTI)..." x:Name="MenuImportTerrain" />
                    <MenuItem Header="Objects (W_*.BIN)..." x:Name="MenuImportObjects" />
                </MenuItem>
                <MenuItem Header="Export">
                    <MenuItem Header="Export light map..." x:Name="MenuExportLightmap" />
                    <MenuItem Header="Export height map..." x:Name="MenuExportHeightmap" />
                    <MenuItem Header="Export triangle map..." x:Name="MenuExportTrimap" />
                    <MenuItem Header="Export terrain..." x:Name="MenuExportTerrain" />
                    <MenuItem Header="Export objects..." x:Name="MenuExportObjects" />
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" x:Name="MenuExit" />
            </MenuItem>
            <!-- Editor -->
            <MenuItem Header="_Editor">
                <MenuItem Header="Draw dome" x:Name="MenuDrawDome" />
                <MenuItem Header="Dome color..." x:Name="MenuDomeColor" />
                <MenuItem Header="Sea color..." x:Name="MenuSeaColor" />
                <MenuItem Header="Sea ground color..." x:Name="MenuSeaGroundColor" />
                <MenuItem Header="Go to location..." x:Name="MenuGoToLocation" />
                <Separator/>
                <MenuItem Header="View terrain mesh" x:Name="MenuViewTerrainMesh" InputGesture="F9" />
                <MenuItem Header="Draw real objects" x:Name="MenuDrawRealObjects" InputGesture="F10" />
                <MenuItem Header="View objects through terrain" x:Name="MenuViewObjThruTerrain" InputGesture="F11" />
                <Separator/>
                <MenuItem Header="Camera mode" x:Name="MenuModeCamera" InputGesture="F1" />
                <MenuItem Header="Height editing mode" x:Name="MenuModeHeight" InputGesture="F2" />
                <MenuItem Header="Light editing mode" x:Name="MenuModeLight" InputGesture="F3" />
                <MenuItem Header="Triangle editing mode" x:Name="MenuModeTriangle" InputGesture="F4" />
                <MenuItem Header="Object editing mode" x:Name="MenuModeObject" InputGesture="F5" />
                <Separator/>
                <MenuItem Header="Reset camera" x:Name="MenuResetCamera" />
                <Separator/>
                <MenuItem Header="Preferences..." x:Name="MenuPreferences" />
            </MenuItem>
            <!-- Terrain -->
            <MenuItem Header="_Terrain">
                <MenuItem Header="Stretch / Move..." x:Name="MenuStretchMove" />
                <MenuItem Header="Crop..." x:Name="MenuCrop" />
                <MenuItem Header="Add borders..." x:Name="MenuAddBorders" />
                <MenuItem Header="Fix open edges..." x:Name="MenuFixEdges" />
                <Separator/>
                <MenuItem Header="Soften map (no edges)" x:Name="MenuSoftenNoEdges" />
                <MenuItem Header="Soften map (including edges)" x:Name="MenuSoftenWithEdges" />
                <Separator/>
                <MenuItem Header="Automatic lighting..." x:Name="MenuAutoLighting" />
            </MenuItem>
            <!-- Map -->
            <MenuItem Header="_Map">
                <MenuItem Header="Map names and properties..." x:Name="MenuMapNames" />
                <MenuItem Header="Map objects tree view..." x:Name="MenuMapObjTree" />
                <MenuItem Header="Missions..." x:Name="MenuMissions" />
                <MenuItem Header="Mission objects tree view..." x:Name="MenuMissionObjTree" />
                <MenuItem Header="Marker report..." x:Name="MenuMarkerReport" />
                <Separator/>
                <MenuItem Header="Place all objects on surface" x:Name="MenuPlaceOnSurface" />
            </MenuItem>
            <!-- Special -->
            <MenuItem Header="_Special">
                <MenuItem Header="Show console" x:Name="MenuShowConsole" />
            </MenuItem>
            <!-- Help -->
            <MenuItem Header="_Help">
                <MenuItem Header="Show editor controls" x:Name="MenuShowControls" />
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="36" Spacing="2">
            <ToggleButton x:Name="BtnCamera" Content="ðŸ“· Camera" IsChecked="True"
                          Width="90" Margin="4,4,0,4" />
            <ToggleButton x:Name="BtnHeight" Content="â›° Height"
                          Width="90" Margin="2,4,0,4" />
            <ToggleButton x:Name="BtnLight" Content="ðŸ’¡ Light"
                          Width="90" Margin="2,4,0,4" />
            <ToggleButton x:Name="BtnTriangle" Content="â–³ Triangle"
                          Width="90" Margin="2,4,0,4" />
            <ToggleButton x:Name="BtnObject" Content="ðŸ“¦ Object"
                          Width="90" Margin="2,4,0,4" />
            <Separator Width="1" Margin="8,4" />
            <TextBlock Text="Size:" VerticalAlignment="Center" Margin="4,0"/>
            <Slider x:Name="SliderRadius" Minimum="5" Maximum="200" Value="50" Width="120"
                    VerticalAlignment="Center" />
            <TextBlock Text="Alpha:" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <Slider x:Name="SliderStrength" Minimum="0.01" Maximum="1.0" Value="0.5" Width="120"
                    VerticalAlignment="Center" />
        </StackPanel>

        <!-- Height Editor Panel (visible in height editing mode) -->
        <StackPanel x:Name="HeightPanel" DockPanel.Dock="Top" Orientation="Horizontal"
                    Height="40" Spacing="4" IsVisible="False">
            <TextBlock Text="Min:" VerticalAlignment="Center" Margin="8,0,2,0"/>
            <TextBox x:Name="TxtMinHeight" Width="70" Text="-40" VerticalAlignment="Center" />
            <Slider x:Name="SliderHeight" Minimum="0" Maximum="1000" Value="0" Width="400"
                    VerticalAlignment="Center" />
            <TextBlock Text="Max:" VerticalAlignment="Center" Margin="4,0,2,0"/>
            <TextBox x:Name="TxtMaxHeight" Width="70" Text="1000" VerticalAlignment="Center" />
            <TextBlock Text="Height:" VerticalAlignment="Center" Margin="8,0,2,0"/>
            <TextBox x:Name="TxtCurrentHeight" Width="70" Text="-40" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Light Editor Panel (visible in light painting mode) -->
        <StackPanel x:Name="LightPanel" DockPanel.Dock="Top" Orientation="Horizontal"
                    Height="40" Spacing="4" IsVisible="False">
            <Border x:Name="ColorSwatch" Width="32" Height="28" CornerRadius="3"
                    Background="White" Margin="8,0,4,0" VerticalAlignment="Center"
                    Cursor="Hand" />
            <TextBlock Text="R:" VerticalAlignment="Center" Foreground="#F88" Margin="4,0,2,0"/>
            <Slider x:Name="SliderR" Minimum="0" Maximum="255" Value="255" Width="100"
                    VerticalAlignment="Center" />
            <TextBox x:Name="TxtColorR" Width="40" Text="255" VerticalAlignment="Center" />
            <TextBlock Text="G:" VerticalAlignment="Center" Foreground="#8F8" Margin="4,0,2,0"/>
            <Slider x:Name="SliderG" Minimum="0" Maximum="255" Value="255" Width="100"
                    VerticalAlignment="Center" />
            <TextBox x:Name="TxtColorG" Width="40" Text="255" VerticalAlignment="Center" />
            <TextBlock Text="B:" VerticalAlignment="Center" Foreground="#88F" Margin="4,0,2,0"/>
            <Slider x:Name="SliderB" Minimum="0" Maximum="255" Value="255" Width="100"
                    VerticalAlignment="Center" />
            <TextBox x:Name="TxtColorB" Width="40" Text="255" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Triangle Editor Panel (visible in triangle editing mode) -->
        <StackPanel x:Name="TrianglePanel" DockPanel.Dock="Top" Orientation="Horizontal"
                    Height="40" Spacing="4" IsVisible="False">
            <TextBlock Text="Tool:" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <RadioButton x:Name="RbTriSet" Content="Set/Erase" GroupName="TriTool"
                         IsChecked="True" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <RadioButton x:Name="RbTriDiag" Content="Diagonal Dir" GroupName="TriTool"
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
            <RadioButton x:Name="RbTriDiagOpt" Content="Diagonal Optimize" GroupName="TriTool"
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
            <RadioButton x:Name="RbTriCornerOpt" Content="Corner Optimize" GroupName="TriTool"
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock VerticalAlignment="Center" Margin="16,0,0,0"
                       Text="Left: add/normal  Right: remove/alternate" />
        </StackPanel>

        <!-- Status Bar -->
        <Panel DockPanel.Dock="Bottom" Height="24">
            <TextBlock x:Name="StatusText"
                       VerticalAlignment="Center" Margin="8,0"
                       Text="Ready" />
        </Panel>

        <!-- Main content: Viewport center, Properties right -->
        <Grid ColumnDefinitions="*,Auto,220">
            <!-- 3D Viewport (Panel provides hit-test surface for mouse input) -->
            <Panel Grid.Column="0" x:Name="ViewportPanel" Background="Transparent">
                <ctrl:OpenGlViewport x:Name="Viewport" />
            </Panel>

            <GridSplitter Grid.Column="1" Width="4" />

            <!-- Property Panel -->
            <Border Grid.Column="2" BorderThickness="1,0,0,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Properties"
                               Margin="8,4" FontWeight="Bold"/>
                    <ScrollViewer>
                        <StackPanel x:Name="PropertyPanel" Margin="8,8,14,8" Spacing="6">
                            <TextBlock x:Name="PropHeader" Text="No selection" />

                            <StackPanel x:Name="ObjPropsPanel" IsVisible="False" Spacing="4">
                                <TextBlock Text="Type:" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBox x:Name="PropObjType" Grid.Column="0" />
                                    <Button x:Name="BtnObjTypeDropdown" Grid.Column="1"
                                            Content="â–¼" Width="28" Padding="4,0"
                                            VerticalAlignment="Stretch" />
                                </Grid>
                                <Popup x:Name="ObjTypePopup" PlacementTarget="{Binding #PropObjType}"
                                       Placement="Bottom" MaxHeight="300" Width="280">
                                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                            BorderThickness="1" CornerRadius="4" Padding="4">
                                        <StackPanel Spacing="4">
                                            <TextBox x:Name="TxtObjTypeSearch" Watermark="Search..." />
                                            <ListBox x:Name="LstObjTypes" MaxHeight="240" />
                                        </StackPanel>
                                    </Border>
                                </Popup>

                                <TextBlock Text="X:" />
                                <TextBox x:Name="PropObjX" />

                                <TextBlock Text="Y:" />
                                <TextBox x:Name="PropObjY" />

                                <TextBlock Text="Z:" />
                                <TextBox x:Name="PropObjZ" />

                                <TextBlock Text="Angle:" />
                                <TextBox x:Name="PropObjAngle" />
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjTilt" Content="Tilt:" />
                                </StackPanel>
                                <StackPanel x:Name="PanelTilt" IsVisible="False" Spacing="4">
                                    <TextBlock Text="Tilt Forward:" />
                                    <TextBox x:Name="PropObjTiltFwd" IsEnabled="False" />
                                    <TextBlock Text="Tilt Left:" />
                                    <TextBox x:Name="PropObjTiltLeft" IsEnabled="False" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjScale" Content="Scale:" />
                                </StackPanel>
                                <TextBox x:Name="PropObjScale" IsEnabled="False" />

                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjAIMode" Content="AIMode:" />
                                </StackPanel>
                                <TextBox x:Name="PropObjAIMode" IsEnabled="False" />

                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjTeamID" Content="TeamID:" />
                                </StackPanel>
                                <TextBox x:Name="PropObjTeamID" IsEnabled="False" />

                                <!-- More properties: Light Color, OData -->
                                <Separator Margin="0,4" />
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjLightColor" Content="Light Color" />
                                </StackPanel>
                                <StackPanel x:Name="PanelLightColor" IsVisible="False" Spacing="2">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="R:" Width="16" />
                                        <TextBox x:Name="PropLightR" Width="70" />
                                        <TextBlock Text="G:" Width="16" />
                                        <TextBox x:Name="PropLightG" Width="70" />
                                        <TextBlock Text="B:" Width="16" />
                                        <TextBox x:Name="PropLightB" Width="70" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <CheckBox x:Name="ChkObjOData" Content="Special (OData)" />
                                </StackPanel>
                                <StackPanel x:Name="PanelOData" IsVisible="False" Spacing="2">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="1:" Width="16" />
                                        <TextBox x:Name="PropOData1" Width="70" />
                                        <TextBlock Text="2:" Width="16" />
                                        <TextBox x:Name="PropOData2" Width="70" />
                                        <TextBlock Text="3:" Width="16" />
                                        <TextBox x:Name="PropOData3" Width="70" />
                                    </StackPanel>
                                </StackPanel>

                                <Button x:Name="BtnApplyProps" Content="Apply" HorizontalAlignment="Stretch" />
                                <Button x:Name="BtnDeleteObj" Content="Delete Object"
                                        HorizontalAlignment="Stretch" Foreground="OrangeRed" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
